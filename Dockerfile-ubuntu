FROM --platform=linux ubuntu:22.04
ARG BUILDARCH

# Change your versions here
ENV GO_VERSION=1.23.1
ENV IGNITE_VERSION=0.22.1
ENV NODE_VERSION=22.9.0

ENV LOCAL=/usr/local
ENV GOROOT=$LOCAL/go
ENV HOME=/root
ENV GOPATH=$HOME/go
ENV PATH=$GOROOT/bin:$GOPATH/bin:$PATH

RUN mkdir -p $GOPATH/bin

ENV PACKAGES curl gcc
RUN apt-get update
RUN apt-get install -y $PACKAGES

# Install Go
RUN curl -L https://go.dev/dl/go$1.23.1.linux-$BUILDARCH.tar.gz | tar -C $LOCAL -xzf -

# Install ignite
RUN curl -L https://get.ignite.com/cli@v$0.22.1! | bash

RUN apt-get clean

EXPOSE 1317 3000 4500 5000 26657

WORKDIR /SP5
